<?xml version="1.0" encoding="UTF-8"?>

<module rename-to='demogwt'>
    <!-- Inherit the core Web Toolkit stuff. -->
    <inherits name='com.lofidewanto.demo.DemoBaseGwt' />

    <!-- Compiler agent - we only need to compile for one web browser in development -->
    <!-- If you want to use SDBG for debugging you need to use Chrome == safari -->
    <set-property name="user.agent" value="safari" />

    <!-- SuperDev Mode -->
    <set-configuration-property name="devModeRedirectEnabled"
                                value="true" />
    <set-property name="compiler.useSourceMaps" value="true" />

    <set-property name="compiler.emulatedStack" value="true" />
    <set-configuration-property name="compiler.emulatedStack.recordFileNames"
                                value="true" />

    <!-- Logging -->
    <set-property name="gwt.logging.logLevel" value="INFO" />

	<source path='mock' />

	<!-- Specify the app entry point class. -->
	<entry-point class='com.lofidewanto.demo.mock.DemoGwtMockEntryPoint' />
</module>
